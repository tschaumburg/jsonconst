{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        //"noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "rootDir": "source",
        "sourceRoot": "source",
        "noEmitOnError": true,
        "sourceMap": true,
        "outFile": "dist/app.js"
    },
    "exclude": [
        "dist",
        "typings",
        "node_modules",
        "lib"
    ]
}
